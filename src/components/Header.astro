                        <div class="dropdown-menu-img">
                            <img src={dropdownFoto.src} alt="dropdownMenuImage">
                        </div>
                    </div>
                </div>
            </li>
            <!-- UNTERNEHMEN-->
            <li class="dropdown">
                <a href=""><span class="header-unternehmen-span">UNTERNEHMEN</span><i class="bi bi-chevron-down"></i></a>
                <!-- dropdown-menu -->
                <div class="dropdown-menu unternehmen-container">
                    <div>
                        <ul class="unternehmen-dropdown-menu-list">
                            <div class="unternehmen-dropdown-menu-list-row">
                                <li class="unternehmen-dropdown-menu-list-item"><a  href="#">Über uns</a></li>
                                <li class="unternehmen-dropdown-menu-list-item"><a  href="#">Blog</a></li>
                                 <li class="unternehmen-dropdown-menu-list-item"><a  href="#">Kontakt</a></li>
                            </div>

